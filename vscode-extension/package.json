{
    "name": "ai-code-mentor-satellite",
    "displayName": "AI Code Mentor Satellite",
    "description": "Satellite extension for AI Code Mentor - Open your code in the platform instantly.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-code-mentor-sidebar",
                    "title": "AI Code Mentor",
                    "icon": "media/icon.svg"
                }
            ]
        },
        "views": {
            "ai-code-mentor-sidebar": [
                {
                    "type": "webview",
                    "id": "ai-code-mentor.sidebar",
                    "name": "Chat"
                }
            ]
        },
        "commands": [
            {
                "command": "ai-code-mentor.openInWeb",
                "title": "AI Mentor: Open Dashboard"
            },
            {
                "command": "ai-code-mentor.connect",
                "title": "AI Mentor: Connect"
            },
            {
                "command": "ai-code-mentor.disconnect",
                "title": "AI Mentor: Disconnect"
            },
            {
                "command": "ai-code-mentor.explain",
                "title": "AI Mentor: Explain Selection"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "ai-code-mentor.openInWeb",
                    "group": "navigation"
                },
                {
                    "command": "ai-code-mentor.explain",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@types/markdown-it": "^14.1.2",
        "axios": "^1.13.5",
        "markdown-it": "^14.1.0"
    }
}
